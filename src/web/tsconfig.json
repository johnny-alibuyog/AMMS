{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "lib": ["es2019", "dom"]
  },
  "include": [
    "./src/**/*.ts", 
    "./test/**/*.ts", 
    "./custom_typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
