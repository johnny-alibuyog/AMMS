{
  "name": "amms.api",
  "version": "1.0.0",
  "description": "Server Api for AMMS",
  "main": "/dist/server.js",
  "scripts": {
    "postinstall": "npx tsc",
    "dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "start": "npx pm2 start pm2.yaml",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000 --detectOpenHandles --coverage"
  },
  "author": "johnny",
  "license": "ISC",
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testMatch": [
      "**/*.feature.steps.ts",
      "**/*.test.ts"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "\\.ts$": [
        "ts-jest"
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.3.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "helmet": "^3.23.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.0",
    "morgan": "^1.10.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "swagger-ui-express": "^4.1.4",
    "typescript": "^3.9.7",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cls-hooked": "^4.3.1",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/faker": "^4.1.12",
    "@types/helmet": "0.0.45",
    "@types/jest": "^26.0.10",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/node": "^13.13.15",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/winston": "^2.4.4",
    "cross-env": "^7.0.2",
    "jest": "^26.4.0",
    "jest-cucumber": "^2.0.13",
    "pm2": "^4.4.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "tsc-watch": "^4.2.9"
  }
}
